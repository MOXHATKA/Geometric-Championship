{
    "compilerOptions": {
      "target": "es6",
      "module": "es2015",
      "lib": ["DOM", "ES2016"],
      "allowJs": true,
      "checkJs": true,
      "sourceMap": true,
      "outDir": "./build",
      "removeComments": true,
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/*"],
    "exclude": ["node_modules"]
  }